<?xml version="1.0"?>

<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

     <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Tests" editable="top" decoration-danger="status=='refused'" decoration-success="status=='accepted'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>

                <button 
                    name="action_offer_accepted" 
                    type="object" 
                    icon="fa-check" 
                    title="Accept" 
                    attrs="{'invisible': ['|', ('status', '=', 'accepted'), ('status', '=', 'refused')]}"/>

                <button 
                    name="action_offer_refused" 
                    type="object" icon="fa-times" 
                    title="Refuse" 
                    attrs="{'invisible': ['|', ('status', '=', 'accepted'), ('status', '=', 'refused')]}"/>

                <field name="status" invisible="1"/>
            </tree>
        </field>
    </record>

</odoo>